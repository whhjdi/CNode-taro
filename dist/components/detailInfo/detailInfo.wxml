<block>
    <view class="detailInfo">
        <view class="detail-header">
            <view class="detail-header-title">
                <block>
                    <block wx:if="{{detailInfo.top}}"><text class="right-tab">置顶</text>
                    </block>
                    <block wx:else>
                        <block>
                            <block wx:if="{{detailInfo.tab === 'share'}}"><text class="right-tab right-share">分享</text>
                            </block>
                            <block wx:else><text class="right-tab right-ask">问答</text>
                            </block>
                        </block>
                    </block>
                </block>{{detailInfo.title}}</view>
            <view class="detail-header-desc"><text>发布于{{anonymousState__temp}}</text><text class="detail-author">.作者{{detailInfo.author && detailInfo.author.loginname}}</text><text>.{{detailInfo.visit_count}}次浏览</text>
            </view>
        </view>
        <view class="detail-body">
            <rich-text nodes="{{detailInfo.content}}"></rich-text>
        </view>
    </view>
</block>