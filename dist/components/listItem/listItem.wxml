<block>
    <at-accordion open="{{open}}" __triggerObserer="{{ _triggerObserer }}" bindonclick="handleClick" title="{{title}}" __fn_onClick="{{true}}" data-e-onclick-so="this">
        <at-list hasBorder="{{true}}" __triggerObserer="{{ _triggerObserer }}">
            <block>
                <block wx:if="{{data && data.length > 0}}">
                    <view wx:key="id" wx:for="{{data}}" wx:for-item="item" wx:for-index="_anonIdx2">
                        <at-list-item arrow="right" __triggerObserer="{{ _triggerObserer }}" title="{{item.title || item.reply.content}}" thumb="{{item.author.avatar_url}}" bindonclick="gotoDetail" __fn_onClick="{{true}}" data-e-onclick-so="this" data-e-onclick-a-a="{{item.id}}"></at-list-item>
                    </view>
                </block>
                <block wx:else>
                    <at-list-item title="暂无主题" __triggerObserer="{{ _triggerObserer }}" thumb="https://img12.360buyimg.com/jdphoto/s72x72_jfs/t6160/14/2008729947/2754/7d512a86/595c3aeeNa89ddf71.png"></at-list-item>
                </block>
            </block>
        </at-list>
    </at-accordion>
</block>