<block>
    <view class="user">
        <view class="info">
            <view class="avatar-wrapper">
                <image src="{{avatar_url ? avatar_url : ''}}" class="avatar"></image><text class="name">{{loginname}}</text>
            </view>
            <at-button type="primary" __triggerObserer="{{ _triggerObserer }}" className="logout" size="small" bindonclick="handleLogout" __fn_onClick="{{true}}" data-e-onclick-so="this">退出登录</at-button>
        </view>
        <list-item data="{{recent_topics}}" __triggerObserer="{{ _triggerObserer }}" title="最新主题"></list-item>
        <list-item data="{{recent_replies}}" __triggerObserer="{{ _triggerObserer }}" title="最近回复"></list-item>
        <list-item data="{{hasReadMsgs}}" __triggerObserer="{{ _triggerObserer }}" title="已读消息"></list-item>
        <list-item data="{{notReadMsgs}}" __triggerObserer="{{ _triggerObserer }}" title="未读消息"></list-item>
    </view>
</block>